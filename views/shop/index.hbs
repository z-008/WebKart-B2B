
<div class="container-fluid">
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">

      <div class="item active">
        <img src="http://www.technocrazed.com/wp-content/uploads/2015/12/Designer-Wallpaper-Background-22.jpg" alt="Los Angeles" width=1200 height=400>
        <div class="carousel-caption">
          <h3>Los Angeles</h3>
          <p>LA is always so much fun!</p>
        </div>
      </div>

      <div class="item">
        <img src="http://static.hdw.eweb4.com/media/wallpapers_dl/1/37/368073-background-hd-designs.jpg" height=400 width=1200>
        <div class="carousel-caption">
          <h1>Chicago</h1>
          <p>Thank you, Chicago!</p>
        </div>
      </div>
    
      <div class="item">
        <img src="https://edsurge.imgix.net/uploads/post/image/10591/edsurge-1513797713.jpg?auto=compress%2Cformat&w=2000&h=810&fit=crop" alt="New York"  height=400 width=1200>
        <div class="carousel-caption">
          <h3>New York</h3>
          <p>We love the Big Apple!</p>
        </div>
      </div>
  
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
<br>
<div class="jumbotron container" style="border-radius:10px;"><h1 style="text-align:center;color:white;">Categories</h1></div>





<div class="container">
<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
            {{ successMsg }}
        </div>
    </div>
</div>

{{# each category }}
    <div class="row">
        {{# each this }}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail" >
                    <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
                    <div class="caption">
                        <h1 style="text-align:center;">{{ this.title }}</h1>
                        <div class="clearfix">
                            <a href="/products/{{this.title}}" class="btn btn-primary btn-block btn-lg" role="button">See Stuff</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}

</div>